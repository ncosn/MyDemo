<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="330dp"
    android:layout_height="227dp"
    android:focusable="true"
    android:focusableInTouchMode="true"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/tv_admin_login"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/view_divider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="管理员登录"
        android:textSize="18sp"
        android:textColor="@color/colorPrimary"/>
    <ImageView
        android:clickable="true"
        android:id="@+id/im_cancel"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_width="21.5dp"
        android:layout_height="21.5dp"
        android:src="@drawable/ic_cancel" />

    <View
        android:id="@+id/view_divider"
        app:layout_constraintTop_toBottomOf="@+id/tv_admin_login"
        app:layout_constraintBottom_toTopOf="@id/et_password"
        android:layout_marginTop="19.5dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/dash_line"/>

    <EditText
        android:id="@+id/et_password"
        app:layout_constraintTop_toBottomOf="@+id/view_divider"
        app:layout_constraintBottom_toTopOf="@+id/bt_login"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:inputType="numberPassword"
        android:maxLength="6"
        android:layout_marginTop="30dp"
        android:layout_width="230dp"
        android:layout_height="42dp"
        android:hint="请输入口令"
        android:paddingStart="15dp"
        android:background="@drawable/border_et_admin"/>

    <Button
        android:id="@+id/bt_login"
        android:layout_marginVertical="30dp"
        app:layout_constraintTop_toBottomOf="@id/et_password"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="登 录"
        android:textColor="@color/white"
        android:layout_width="230dp"
        android:layout_height="37dp"
        android:background="@drawable/border_button_green"/>



</androidx.constraintlayout.widget.ConstraintLayout>