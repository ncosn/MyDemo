<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorBackground"
    tools:context=".UserCommentActivity">

    <include
        android:id="@+id/toolbar_main"
        layout="@layout/mytoolbar" />
    <ScrollView
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="105dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="509dp"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:paddingStart="40dp"
                android:paddingTop="22.5dp"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/colorPrimary"
                    android:text="身份 ："/>
                <RadioGroup
                    android:background="@drawable/border_rg"
                    android:id="@+id/rg_status"
                    android:layout_width="200dp"
                    android:layout_height="32dp"
                    android:orientation="horizontal"
                    android:checkedButton="@id/rb_real">
                    <RadioButton
                        android:gravity="center"
                        android:textColor="@drawable/rb_color_check"
                        android:id="@+id/rb_real"
                        android:button="@null"
                        android:background="@drawable/border_rb_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="实 名" />
                    <RadioButton
                        android:gravity="center"
                        android:textColor="@drawable/rb_color_check"
                        android:id="@+id/rb_anonymous"
                        android:button="@null"
                        android:background="@drawable/border_rb_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="匿 名" />
                </RadioGroup>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_real"
                android:paddingStart="40dp"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <TextView
                        android:id="@+id/tv_name"
                        android:text="客户姓名 :"
                        android:textSize="13sp"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <EditText
                        android:id="@+id/et_name"
                        android:layout_marginStart="14.5dp"
                        android:paddingStart="10dp"
                        android:layout_width="160dp"
                        android:layout_height="30dp"
                        android:textSize="12sp"
                        android:background="@drawable/border_et_radius"
                        android:hint="请输入您的姓名"
                        android:maxLength="10"
                        />
                    <TextView
                        android:id="@+id/tv_sex"
                        android:paddingStart="60dp"
                        android:layout_marginEnd="14.5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="性别 :"/>
                    <RadioGroup
                        android:id="@+id/rg_sex"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:checkedButton="@id/rb_male">
                        <RadioButton
                            android:id="@+id/rb_male"
                            android:button="@null"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/textColor2"
                            android:text="男"
                            android:drawableStart="@drawable/border_rb_rect"
                            android:drawablePadding="10dp"/>
                        <RadioButton
                            android:id="@+id/rb_female"
                            android:layout_marginStart="25dp"
                            android:button="@null"
                            android:drawableStart="@drawable/border_rb_rect"
                            android:drawablePadding="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/textColor2"
                            android:text="女" />
                    </RadioGroup>
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">
                    <TextView
                        android:id="@+id/tv_tel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="联系方式 :"
                        android:textSize="13sp"
                        android:textColor="@color/black"/>
                    <EditText
                        android:id="@+id/et_tel"
                        android:layout_marginStart="14.5dp"
                        android:paddingStart="10dp"
                        android:layout_width="245dp"
                        android:layout_height="30dp"
                        android:textSize="12sp"
                        android:background="@drawable/border_et_radius"
                        android:maxLength="11"
                        android:inputType="number"
                        android:hint="请输入您的联系方式"/>
                </LinearLayout>

            </LinearLayout>
            <View
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="23dp"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/dash_line"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="92dp"
                android:paddingStart="39dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/colorPrimary"
                    android:text="留言类型 ："/>
                <RadioGroup
                    android:id="@+id/rg_type"
                    android:layout_width="300dp"
                    android:layout_height="32dp"
                    android:background="@drawable/border_rg"
                    android:orientation="horizontal"
                    android:checkedButton="@id/rb_praise">
                    <RadioButton
                        android:id="@+id/rb_praise"
                        android:button="@null"
                        android:gravity="center"
                        android:layout_width="100dp"
                        android:layout_height="32dp"
                        android:textColor="@drawable/rb_color_check"
                        android:background="@drawable/border_rb_style"
                        android:textSize="13sp"
                        android:text="表 扬" />
                    <RadioButton
                        android:id="@+id/rb_advice"
                        android:background="@drawable/border_rb_style"
                        android:button="@null"
                        android:gravity="center"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:textColor="@drawable/rb_color_check"
                        android:textSize="13sp"
                        android:text="建 议" />
                    <RadioButton
                        android:id="@+id/rb_complain"
                        android:background="@drawable/border_rb_style"
                        android:textSize="13sp"
                        android:button="@null"
                        android:gravity="center"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:textColor="@drawable/rb_color_check"
                        android:text="投 诉"/>
                </RadioGroup>
            </LinearLayout>
            <View
                android:layout_marginHorizontal="40dp"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/dash_line"/>
            <RelativeLayout
                android:paddingTop="30dp"
                android:paddingHorizontal="40dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/colorPrimary"
                    android:text="留言内容 ："/>

                <EditText
                    android:id="@+id/et_comment"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_below="@+id/tv_content"
                    android:layout_marginTop="11dp"
                    android:background="@drawable/border_et_radius"
                    android:gravity="top|left"
                    android:hint="请输入您的留言吧"
                    android:lineSpacingMultiplier="1.5"
                    android:paddingHorizontal="15dp"
                    android:paddingTop="9.5dp"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_words_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="10dp"
                    android:text="0/500"
                    android:textSize="12sp"
                    android:textColor="@color/textColor"
                    android:layout_alignBottom="@+id/et_comment"
                    android:layout_alignEnd="@+id/et_comment" />
            </RelativeLayout>
            <LinearLayout
                android:paddingVertical="26dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">
                <Button
                    android:id="@+id/bt_back"
                    android:layout_width="130dp"
                    android:layout_height="37dp"
                    android:background="@drawable/border_button_white"
                    android:text="返 回"
                    android:textSize="14sp"
                    android:textColor="@color/colorPrimary" />
                <Button
                    android:id="@+id/bt_commit"
                    android:layout_marginStart="20dp"
                    android:layout_width="130dp"
                    android:layout_height="37dp"
                    android:background="@drawable/border_button_green"
                    android:text="提 交"
                    android:textSize="14sp"
                    android:textColor="@color/white" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>




</LinearLayout>